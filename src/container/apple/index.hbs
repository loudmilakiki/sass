<div class='page'>

  <div class='header'>

    {{#with header}}
      <header class='header__content'>
        <div class='header__block'>
          <img
            src='/svg/apple.svg'
            alt='Aplle'
            class='header__icon'
          />

          <nav class='header__block'>
            {{#each links}}
              <a
                href='{{url}}'
                class='header__links'
              >{{text}}</a>
            {{/each}}
          </nav>
        </div>
        <div class='header__action'>

          <img
            src='/svg/search.svg'
            alt='Search'
            class='header__icon'
          />

          <img
            src='/svg/profile.svg'
            alt='Profile'
            class='header__icon'
          />

        </div>

      </header>

    {{/with}}
  </div>

  <div class='header__info'>
    {{#with ad}}

      <div class='header__ad'>

        <a class='header__title'>
          {{title}}
        </a>

        <div class='header__link'>
          {{#with link}}
            <a
              href='{{url}}'
              class='header__link'
            >{{text}}</a>

            <img
              src='/svg/vector.svg'
              alt='Vector'
              class='header__icon'
            />
          {{/with}}
        </div>

      </div>
    {{/with}}
  </div>

  {{#with iphone_pro}}
